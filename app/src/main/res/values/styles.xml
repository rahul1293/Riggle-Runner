<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>-->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/drawer_color</item>
        <item name="colorOnPrimary">@color/drawer_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/drawer_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!--<item name="android:textViewStyle">@style/RobotoTextViewStyle</item>-->
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <!--<item name="android:background">@drawable/top_cornered_shape</item>-->
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:background">@drawable/edit_back_view</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Dash">
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:background">@drawable/back_slot</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="TextView.Title.Small">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_27ssp</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextView.Regular.Black">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextView.Semibold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="Corner10" parent="ShapeAppearanceOverlay.App.SelectedCornerRadius">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="CornerCircular" parent="ShapeAppearanceOverlay.App.SelectedCornerRadius">
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="TextView.Light">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextView.MediumSemibold">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="home_section_title">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_85</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="home_section_view_all">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.19</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black_68</item>
        <item name="drawableTint">@color/black_38</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/black_38</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/color_17</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

</resources>
