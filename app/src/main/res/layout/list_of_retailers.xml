<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.rk_tech.riggle_runner.data.model.response.DummyData" />

        <variable
            name="callback"
            type="com.rk_tech.riggle_runner.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />

    </data>

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{v->callback.onItemClick(v,bean,pos)}">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_iv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:backgroundTint="@color/light_gray"
            android:elevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_6sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            style="@style/TextView.GilroySemiBold_DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/card_iv"

            android:text="Anand Joshi"
            android:textColor="@color/black_85"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/card_iv"
            android:drawableLeft="@drawable/ic_log_in_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/orange"
            android:ellipsize="end"
            android:fontFamily="@font/font_medium"
            android:lines="1"
            android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
            android:text="@string/create_order"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/card_iv"
            android:background="@color/black" />

    </RelativeLayout>
</layout>

