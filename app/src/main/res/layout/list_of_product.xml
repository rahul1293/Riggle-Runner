<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.rk_tech.riggle_runner.data.model.response.DummyData" />

        <variable
            name="callback"
            type="com.rk_tech.riggle_runner.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <RelativeLayout
        android:id="@+id/rlProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvName"
            style="@style/TextView.GilroySemiBold_DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Diet chivda 100 grms"
            android:textColor="@color/black_85"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvPrice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"
            android:maxLines="1"
            android:text="Cost : 22.87"
            android:textColor="@color/black_85"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_createMix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrice_1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/font_medium"
            android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
            android:lines="1"
            android:text="Create Mix"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="@dimen/_9ssp" />


        <TextView
            android:id="@+id/tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrice_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_semibold"
            android:lines="1"
            android:text="View Bulk Size"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="@dimen/_7ssp" />

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"
            android:maxLines="1"
            android:text="Qty :"
            android:textColor="@color/black_85"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/ll_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvQty"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/bg_orange_stroke_round_border"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_minus"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@color/light_gray"
                android:backgroundTint="@color/light_gray"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_rectangle_light_gray_background" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_2sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvshowQty"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="18"

                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_plus"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@color/light_gray"
                android:backgroundTint="@color/light_gray"

                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                app:cardElevation="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_rectangle_light_gray_background" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_2sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_qty"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/dot_line" />


    </RelativeLayout>

</layout>